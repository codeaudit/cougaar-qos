#!/bin/sh

#prints out to this log file
cougaar_quo_log=${QUO_LOG:-`hostname`-$1-`date +%y%m%d%H%M%S`.log}
rssurl=${RSS_CONFIG_URL:-http://stout.bbn.com/~statusquo/RSS-Property.conf}

rss="-Dorg.cougaar.metrics.properties=$rssurl"

COUGAAR_JAVA_ARGS="-Dorg.cougaar.properties.url=file:${COUGAAR_INSTALL_PATH}/quo/bin/props/cougaar/compression.props -Dorg.cougaar.lib.quo.logfile=${cougaar_quo_log} -Dorg.cougaar.useBootstrapper=true $rss"
export COUGAAR_JAVA_ARGS

# needed for JNI calls, such as thread monitoring
#LD_LIBRARY_PATH=${LD_LIBRARY_PATH}:${QUO_ROOT}/lib
#export LD_LIBRARY_PATH


exec ${COUGAAR_SRC_PATH}/core/bin/Node $*



