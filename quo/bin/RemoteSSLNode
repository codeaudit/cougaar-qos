#!/bin/sh

# Word too long!  Put lots of stuff in the property file...

ssl="-Djavax.net.ssl.trustStore=$HOME/keystore -Djavax.net.ssl.trustStorePassword=password -Djavax.net.ssl.keyStore=$HOME/keystore -Djavax.net.ssl.keyStorePassword=password -Dorg.cougaar.core.naming.useSSL=false"

rssurl=${RSS_CONFIG_URL:-http://stout.bbn.com/~statusquo/RSS-Property.conf}

rss="-Dorg.cougaar.metrics.properties=$rssurl"

quo="-Dorg.cougaar.properties.url=file:${COUGAAR_INSTALL_PATH}/quo/bin/props/cougaar/ssl.props"

COUGAAR_JAVA_ARGS="$quo $ssl $rss"
export COUGAAR_JAVA_ARGS


exec ${COUGAAR_INSTALL_PATH}/core/bin/Node $*



