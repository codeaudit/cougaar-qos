#!/bin/sh

orb="-Dorg.omg.CORBA.ORBClass=org.jacorb.orb.ORB -Dorg.omg.CORBA.ORBSingletonClass=org.jacorb.orb.ORBSingleton -Djacorb.verbosity=0"
logging="-Dorg.cougaar.core.logging.config.filename=$COUGAAR_INSTALL_PATH/quo/bin/props/cougaar/logging.props"
count="-Dorg.cougaar.thread.running.max=${THREAD_MAX:-10}"
debug="-Dorg.cougaar.thread.debug=${DEBUG_THREADS:-true}"
log="-Dorg.cougaar.thread.logfile=$1-threads.log"

#aspects=" -Dorg.cougaar.message.transport.aspects=org.cougaar.core.mts.ThreadControlTestAspect,org.cougaar.core.mts.WasteCPUAspect "
#aspects=" -Dorg.cougaar.message.transport.aspects=org.cougaar.core.mts.ThreadControlTestAspect "
#aspects="-Dorg.cougaar.message.transport.aspects=org.cougaar.lib.mquo.QuoGuiAspect"

COUGAAR_JAVA_ARGS="$debug $log $logging $aspects $count $orb"

export COUGAAR_JAVA_ARGS

exec ${COUGAAR_INSTALL_PATH}/core/bin/Node $*

